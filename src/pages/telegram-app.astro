---
/**
 * Страница Telegram Web App формы
 * Открывается из Telegram бота
 * URL: /telegram-app?form_id=xxx
 */

import TelegramForm from '../components/TelegramForm.tsx';

const formId = Astro.url.searchParams.get('form_id');

if (!formId) {
  return Astro.redirect('/404');
}
---

<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title>Форма</title>
  
  <!-- Telegram Web App SDK -->
  <script src="https://telegram.org/js/telegram-web-app.js"></script>
  
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
      background-color: var(--tg-theme-bg-color, #ffffff);
      color: var(--tg-theme-text-color, #000000);
    }
  </style>
</head>
<body>
  <div id="app"></div>
  
  <script>
    // Инициализация Telegram Web App
    if (window.Telegram?.WebApp) {
      const tg = window.Telegram.WebApp;
      tg.ready();
      
      // Применяем тему Telegram
      document.body.style.backgroundColor = tg.backgroundColor;
      document.body.style.color = tg.themeParams.text_color || '#000000';
    }
  </script>
  
  <!-- React компонент -->
  <TelegramForm formId={formId} client:only="react" />
</body>
</html>
