---
/**
 * TENANT REQUEST FORM PAGE
 * 
 * Страница формы для арендаторов, открываемая через Telegram Web App.
 * URL: /tenant-app
 */

import TenantRequestForm from '../components/TenantRequestForm';
import '../styles/tenant-form.css';

const pageTitle = 'Find Accommodation in Sri Lanka';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
  <meta name="theme-color" content="#7C3AED" />
  
  <title>{pageTitle}</title>
  
  <!-- Telegram Web App Script -->
  <script src="https://telegram.org/js/telegram-web-app.js"></script>
  
  <!-- Prevent zoom on iOS -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover" />
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  
  <style>
    /* Reset & Base */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    html, body {
      height: 100%;
      overflow-x: hidden;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: var(--tg-bg, #ffffff);
      color: var(--tg-text, #000000);
    }
    
    /* Loading State */
    .app-loading {
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
      font-size: 18px;
      color: var(--tg-hint, #999);
    }
    
    .spinner {
      display: inline-block;
      width: 40px;
      height: 40px;
      border: 4px solid rgba(124, 58, 237, 0.1);
      border-top-color: var(--tg-button, #7C3AED);
      border-radius: 50%;
      animation: spin 0.8s linear infinite;
    }
    
    @keyframes spin {
      to { transform: rotate(360deg); }
    }
  </style>
</head>
<body>
  <!-- Loading fallback -->
  <div id="app-loading" class="app-loading">
    <div class="spinner"></div>
  </div>
  
  <!-- Main App -->
  <div id="app" style="display: none;">
    <TenantRequestForm client:only="react" />
  </div>
  
  <script>
    // Wait for Telegram WebApp script to load
    function initTelegramApp() {
      console.log('Checking Telegram availability...');
      console.log('Telegram object:', window.Telegram);
      console.log('WebApp object:', window.Telegram?.WebApp);
      
      // Initialize Telegram WebApp
      if (window.Telegram && window.Telegram.WebApp) {
        const tg = window.Telegram.WebApp;
        
        console.log('✅ Telegram WebApp initialized:', tg);
        console.log('InitData:', tg.initData);
        console.log('User:', tg.initDataUnsafe?.user);
        
        // Initialize
        tg.ready();
        tg.expand();
        
        // Apply theme
        if (tg.themeParams.bg_color) {
          document.body.style.backgroundColor = tg.themeParams.bg_color;
        }
        
        // Show app when React loads
        setTimeout(() => {
          document.getElementById('app-loading').style.display = 'none';
          document.getElementById('app').style.display = 'block';
        }, 100);
        
      } else {
        // Not in Telegram - show warning with debug info
        console.log('❌ Telegram WebApp not available');
        document.getElementById('app-loading').innerHTML = `
          <div style="text-align: center; padding: 20px;">
            <h2 style="color: #EF4444; margin-bottom: 16px;">⚠️ Error</h2>
            <p style="color: #666;">This page must be opened from Telegram.</p>
            <p style="color: #999; font-size: 14px; margin-top: 16px;">
              Please use the Telegram bot to access this form.
            </p>
            <div style="margin-top: 20px; padding: 10px; background: #f3f4f6; border-radius: 8px; font-size: 12px; text-align: left;">
              <strong>Debug Info:</strong><br>
              Telegram: ${typeof window.Telegram}<br>
              WebApp: ${typeof window.Telegram?.WebApp}<br>
              URL: ${window.location.href}<br>
              User Agent: ${navigator.userAgent.substring(0, 50)}...
            </div>
          </div>
        `;
      }
    }
    
    // Try multiple times to catch the script loading
    let attempts = 0;
    const maxAttempts = 10;
    
    function tryInit() {
      attempts++;
      console.log(`Attempt ${attempts}/${maxAttempts}`);
      
      if (window.Telegram && window.Telegram.WebApp) {
        initTelegramApp();
      } else if (attempts < maxAttempts) {
        setTimeout(tryInit, 200);
      } else {
        console.log('Max attempts reached, showing error');
        initTelegramApp();
      }
    }
    
    // Start trying when DOM is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', tryInit);
    } else {
      tryInit();
    }
  </script>
</body>
</html>
