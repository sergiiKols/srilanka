 * TENANT REQUEST FORM PAGE
 * 
 * –°—Ç—Ä–∞–Ω–∏—Ü–∞ —Ñ–æ—Ä–º—ã –¥–ª—è –∞—Ä–µ–Ω–¥–∞—Ç–æ—Ä–æ–≤, –æ—Ç–∫—Ä—ã–≤–∞–µ–º–∞—è —á–µ—Ä–µ–∑ Telegram Web App.
 * URL: /tenant-app
 */

import TenantRequestForm from '../components/TenantRequestForm';
import '../styles/tenant-form.css';

const pageTitle = 'Find Accommodation in Sri Lanka';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
  <meta name="theme-color" content="#7C3AED" />
  
  <title>{pageTitle}</title>
  <meta name="version" content="2.0" />
  
  <!-- Telegram Web App Script - Official SDK -->
  <script src="https://telegram.org/js/telegram-web-app.js"></script>
  
  <!-- Prevent zoom on iOS -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover" />
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  
  <style>
    /* Reset & Base */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    html, body {
      height: 100%;
      overflow-x: hidden;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: var(--tg-bg, #ffffff);
      color: var(--tg-text, #000000);
    }
    
    /* Loading State */
    .app-loading {
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
      font-size: 18px;
      color: var(--tg-hint, #999);
    }
    
    .spinner {
      display: inline-block;
      width: 40px;
      height: 40px;
      border: 4px solid rgba(124, 58, 237, 0.1);
      border-top-color: var(--tg-button, #7C3AED);
      border-radius: 50%;
      animation: spin 0.8s linear infinite;
    }
    
    @keyframes spin {
      to { transform: rotate(360deg); }
    }
  </style>
</head>
<body>
  <!-- Loading fallback -->
  <div id="app-loading" class="app-loading">
    <div class="spinner"></div>
  </div>
  
  <!-- Main App -->
  <div id="app" style="display: none;">
    <TenantRequestForm client:only="react" />
  </div>
  
  <script>
    // SIMPLIFIED VERSION - Just show the form immediately
    console.log('üöÄ Loading tenant form v2.1...');
    
    // Initialize Telegram if available
    if (window.Telegram && window.Telegram.WebApp) {
      const tg = window.Telegram.WebApp;
      console.log('‚úÖ Telegram WebApp found');
      tg.ready();
      tg.expand();
      if (tg.themeParams.bg_color) {
        document.body.style.backgroundColor = tg.themeParams.bg_color;
      }
    } else {
      console.log('‚ö†Ô∏è No Telegram WebApp - using polyfill');
    }
    
    // ALWAYS show the form - no checks!
    window.addEventListener('DOMContentLoaded', function() {
      console.log('‚úÖ DOM loaded - showing form NOW!');
      document.getElementById('app-loading').style.display = 'none';
      document.getElementById('app').style.display = 'block';
    });
    
    // Fallback if DOMContentLoaded already fired
    if (document.readyState !== 'loading') {
      console.log('‚úÖ DOM already loaded - showing form NOW!');
      document.getElementById('app-loading').style.display = 'none';
      document.getElementById('app').style.display = 'block';
    }
  </script>
</body>
</html>
