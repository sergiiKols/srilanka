---
/**
 * Админ страница: Список Telegram форм
 * /admin/forms/telegram
 */

import AdminLayout from '../../../components/admin/AdminLayout.tsx';
import TelegramFormsList from '../../../components/admin/TelegramFormsList.tsx';
import { requireAdminPage } from '../../../lib/auth';

// Проверка прав админа
const authResult = await requireAdminPage(Astro);
if (authResult.redirect) return authResult.redirect;

const user = authResult.user;
---

<AdminLayout title="Telegram Формы" user={user}>
  <div class="space-y-6">
    <!-- Заголовок и кнопка создания -->
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Telegram Формы</h1>
        <p class="text-gray-600 mt-1">Управление формами для Telegram Web App</p>
      </div>
      <a
        href="/admin/forms/telegram/new"
        class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 flex items-center gap-2"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Создать форму
      </a>
    </div>

    <!-- Список форм -->
    <TelegramFormsList client:only="react" />
  </div>
</AdminLayout>
